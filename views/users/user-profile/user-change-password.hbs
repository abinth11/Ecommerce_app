{{>head-user}}
{{>user-header}}

<section class="pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {{>user-profile-nav}}
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div>
                        {{#if password_change_stat.modifiedCount}}
                        <p class="alert alert-success text-center">Successfully updated your password</p>
                        {{/if}}
                        {{#if password_change_stat.invalidCurrentPassword}}
                        <p class="alert alert-danger text-center">Invalid current password</p>
                        {{/if}}
                        {{#if password_change_stat.passwordMismatchnewAndConfirm}}
                        <p class="alert alert-danger text-center">Password missmatch</p>
                        {{/if}}
                         {{#if updatePasswd_err}}
                        <p class="alert alert-danger text-center">{{updatePasswd_err.[0].msg}}</p>
                        {{/if}}

                    </div>
                    <div class="card-header">
                        <h5>Change Password</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/change-user-password/{{user}}">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Current Password <span>*</span></label>
                                    <input class="form-control square" name="password" type="password">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>New Password <span>*</span></label>
                                    <input class="form-control square" name="npassword" type="password">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Confirm Password <span>*</span></label>
                                    <input class="form-control square" name="cpassword" type="password">
                                </div>
                                <div class="col-md-12  justify-content-center d-flex">
                                    <button type="submit" class="btn btn-fill-out submit text-center"
                                        value="Submit">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{>foot-user}}